<div class="container col-md-6">
   <table>
      <tr>
         <th>Category Name</th>
         <th>Category Quantity</th>
         <th>Menu</th>
      </tr>
      {{#each categoryList }}
      <tr>
         <td>{{ name }}</td>
         <td>{{ quantity }}</td>
         <td>
            <a href="/category/edit/{{ _id }}">Edit</a>
            <a class="btn" href="/category/delete/{{ _id }}"
            onclick="return confirm('Do you want to delete this category ?');"
            >Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>