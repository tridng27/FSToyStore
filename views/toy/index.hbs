<center>
   <a class="btn btn-primary mb-3" href="/toy/add">Add new toy product</a>
   <a class="btn btn-success" href="/toy/deleteall"
      onclick="return confirm('Are you sure to delete all ?');">Delete all toy products</a>
</center>

<div class="row mt-3 mb-3">
   <div class="col-md-4">
      <form action="/toy/search" method="post">
         <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by name">
      </form>
   </div>
   <div class="col-md-4">
      <a class="btn btn-info" href="/toy/sortid/asc">
         ID Ascending
      </a>
      <a class="btn btn-warning" href="/toy/sortid/desc">
         ID Descending
      </a>
   </div>
<table class="table table-info">
   <tr>
      <th>Toy ID</th>
      <th>Product Name</th>
      <th>Category</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>
   {{#each toyList }}
   <tr>
      <td>{{ productId }}</td>
      <td>{{ productName }}</td>
      <td>
         {{ category.categoryName }}
      </td>
      <td>
         <a href="/toy/detail/{{ _id }}">
            <img src="{{ image }}" width="100" height="100">
         </a>
      </td>
      <td>
         <a class="btn btn-warning" href="/toy/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/toy/delete/{{ _id }}"
            onclick="return confirm('Are you sure to delete this product ?');">Delete</a>
      </td>
   </tr>
   {{/each}}

</table>