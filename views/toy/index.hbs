<div style="margin: 20px auto; width: 80%;">
   <div style="text-align: center;">
      <button style="margin-bottom: 20px; padding: 10px 20px; background-color: #007bff; color: #fff; border: none; border-radius: 5px;"><a href="/toy/add" style="text-decoration: none; color: #fff;">Add new toy product</a></button>
      <button style="margin-bottom: 20px; padding: 10px 20px; background-color: #28a745; color: #fff; border: none; border-radius: 5px;" onclick="return confirm('Are you sure to delete all ?');"><a href="/toy/deleteall" style="text-decoration: none; color: #fff;">Delete all toy products</a></button>
   </div>

   <div style="margin-bottom: 20px;">
      <form action="/toy/search" method="post" style="text-align: center;">
         <input type="search" name="keyword" required placeholder="Search by name" style="padding: 8px; border: 1px solid #ced4da; border-radius: 5px;">
         <button type="submit" style="padding: 8px 20px; background-color: #17a2b8; color: #fff; border: none; border-radius: 5px;">Search</button>
      </form>
   </div>

   <table style="width: 100%; border-collapse: collapse;">
      <thead style="background-color: #007bff; color: #fff;">
         <tr>
            <th style="padding: 10px;">Toy ID</th>
            <th style="padding: 10px;">Product Name</th>
            <th style="padding: 10px;">Category</th>
            <th style="padding: 10px;">Image</th>
            <th style="padding: 10px;">Menu</th>
         </tr>
      </thead>
      <tbody>
         {{#each toyList }}
         <tr style="border-bottom: 1px solid #dee2e6;">
            <td style="padding: 10px;">{{ productId }}</td>
            <td style="padding: 10px;">{{ productName }}</td>
            <td style="padding: 10px;">{{ category.name }}</td>
            <td style="padding: 10px;">
               <a href="/toy/detail/{{ _id }}">
                  <img src="{{ image }}" width="100" height="100" style="border-radius: 5px;">
               </a>
            </td>
            <td style="padding: 10px;">
               <button style="padding: 8px 15px; background-color: #ffc107; color: #212529; border: none; border-radius: 5px;"><a href="/toy/edit/{{ _id }}" style="text-decoration: none; color: #212529;">Edit</a></button>
               <button style="margin-left: 5px; padding: 8px 15px; background-color: #dc3545; color: #fff; border: none; border-radius: 5px;" onclick="return confirm('Are you sure to delete this product ?');"><a href="/toy/delete/{{ _id }}" style="text-decoration: none; color: #fff;">Delete</a></button>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>